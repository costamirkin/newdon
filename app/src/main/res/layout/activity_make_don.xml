<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="cm.com.newdon.MakeDonActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="62.7dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#5d9bff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/group_9" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/paymentLayout"
        android:layout_width="468dp"
        android:layout_height="156dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginBottom="19.3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_46"
        android:padding="16dp">

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:inputType="number"
            android:cursorVisible="false"
            android:text="â‚ª5"
            android:textColor="@color/black"
            android:textSize="80sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@color/grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="AMOUNT TO DONATE"
            android:textColor="@color/lightgrey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvFoundTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Foundation"
            android:textColor="@color/lightgrey"
            android:textSize="12sp" />

        <View
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:background="#f7f7f7" />

        <View
            android:layout_width="64dp"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:background="#f7f7f7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="showKeyboard"
            android:src="@drawable/shape_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="clearAmount"
            android:src="@drawable/shape_26" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:weightSum="100"
        android:layout_below="@+id/paymentLayout">

        <ImageView
            android:id="@+id/coin5"
            android:layout_width="0dp"
            android:layout_weight="23"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="coin5"
            android:src="@drawable/coin5" />

        <ImageView
            android:id="@+id/coin10"
            android:layout_width="0dp"
            android:layout_weight="24"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="coin10"
            android:src="@drawable/coin10" />

        <ImageView
            android:id="@+id/coin18"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="coin18"
            android:src="@drawable/coin18" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="26"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="coin50"
            android:src="@drawable/coin50" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_hight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/grey"
        android:onClick="makeDone"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Make a Don!"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARD"
        android:id="@+id/button4"
        android:onClick="creditCard"
        android:layout_above="@+id/relativeLayout2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
